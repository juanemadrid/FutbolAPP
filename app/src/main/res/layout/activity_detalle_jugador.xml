<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:background="#EEEEEE"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Imagen -->
                <ImageView
                    android:id="@+id/ivFotoDetalle"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/circle_background" />

                <!-- Nombre centrado -->
                <TextView
                    android:id="@+id/tvNombreDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nombre del Jugador"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#222222"
                    android:layout_marginBottom="20dp" />

                <!-- Datos -->
                <TextView
                    android:id="@+id/tvEdadDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edad: 10"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvCategoriaDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CategorÃ­a: Sub-12"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvEPSDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EPS: SURA"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvContactoEmergenciaDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contacto emergencia: MamÃ¡"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvTelefonoEmergenciaDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TelÃ©fono emergencia: 3001234567"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- BotÃ³n ver documento -->
                <Button
                    android:id="@+id/btnVerDocumento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“„ Ver Documento"
                    android:textAllCaps="false"
                    android:backgroundTint="#1976D2"
                    android:textColor="@android:color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
